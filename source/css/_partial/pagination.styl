.pagination 
  display: inline-block
  margin-top: 2rem
  text-align: center
  width: 100%

  .page-number 
    color: $color-text
    font-size: 0.8rem

  a 
    color: $color-text
    padding: 4px 6px
    text-decoration: none
    border-radius: 5px
    background-color: $color-accent
    background-image: none

  a:hover 
    background-image: none

  a:hover:not(.active) 
    color: $color-lightest;

